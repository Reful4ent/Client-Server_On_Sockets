<Window x:Class="WpfApp1.View.ClientServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="ClientServerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"></Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <Button  Command="{Binding StartServerCommand}">Соединиться</Button>
                    <Button  Command="{Binding EndServerCommand}">Отключиться</Button>
                </StackPanel>
            </Grid>
        </Grid>
        <TextBlock Grid.Column="1" Text="{Binding ClientText}"></TextBlock>
        <TextBlock Grid.Column="2" Text="{Binding ServerText}"></TextBlock>
    </Grid>
</Window>
