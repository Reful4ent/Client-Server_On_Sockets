<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <Style x:Key="Window_background" TargetType="Grid">
       
    </Style>
    
    <Style x:Key="IP_information_style" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Padding" Value="20 0 0 0 "></Setter>
    </Style>
    
    <Style x:Key="IP_inputField_style" TargetType="TextBox">
        <Setter Property="Height" Value="20px"></Setter>
        <Setter Property="Width" Value="100px"></Setter>
    </Style>
    
    <Style x:Key="EndServer_style" TargetType="Button">
        <Setter Property="Height" Value="30px"></Setter>
        <Setter Property="Width" Value="120px"></Setter>
    </Style>
    
    <Style x:Key="Exit_style" TargetType="Button">
        <Setter Property="Height" Value="30px"></Setter>
        <Setter Property="Width" Value="120px"></Setter>
    </Style>
    
    <Style x:Key="Client_connection_style" TargetType="Button">
        <Setter Property="Height" Value="30px"></Setter>
        <Setter Property="Width" Value="120px"></Setter>
    </Style>
    
    <Style x:Key="SendTO_style" TargetType="Button">
        <Setter Property="Height" Value="30px"></Setter>
        <Setter Property="Width" Value="170px"></Setter>
    </Style>
    
    
</ResourceDictionary>